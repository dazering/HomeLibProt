<header class="sticky-top mb-3 bg-secondary rounded-bottom">
    <div class="container-fluid">
        <div class="row align-items-center justify-content-center">
            <div class="p-0 col-12 col-sm-12 col-md-3 col-lg-3 col-xl-3 mr-auto">
                <nav class="bg-primary nav nav-justified">
                    <a asp-controller="Home"
                       asp-action="Index"
                       class="nav-item nav-link text-white">HomeLib</a>
                    <a asp-controller="Status"
                       asp-action="GetStatus"
                       class="nav-item nav-link text-white">Status</a>
                </nav>
            </div>
            <div class="p-0 col-12 col-sm-12 col-md-8 col-lg-6 col-xl-5 mr-0 ml-auto">
                <form class=" form-inline justify-content-center" method="post">
                    <div class="row w-100  align-items-center">
                        <div class="p-0 col-12 col-sm-5 col-md-5 col-lg-5 col-xl-5">
                            <input class="form-control w-100"
                                   name="term"
                                   type="text"
                                   placeholder="Search..." />
                        </div>
                        <div class="p-0 col-8 col-sm-5 col-md-5 col-lg-5 col-xl-5 mx-auto">
                            <div>
                                <div class="form-check-inline">
                                    <input id="radio-term-title"
                                           checked="checked"
                                           type="radio"
                                           name="name"
                                           value="Title"
                                           class="mx-1" />
                                    <label for="radio-term-title">By Title</label>
                                </div>
                                <div class="form-check-inline">
                                    <input id="radio-term-name"
                                           type="radio"
                                           name="name"
                                           value="FullName"
                                           class="mx-1" />
                                    <label for="radio-term-name">By Name</label>
                                </div>
                            </div>
                        </div>
                        <div class="p-0 col-4 col-sm-2 col-md-2 col-lg-2 col-xl-2">
                            <button asp-controller="Home"
                                    asp-action="Search"
                                    class="btn btn-primary w-100">
                                Search!
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</header>
