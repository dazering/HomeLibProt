@using Microsoft.EntityFrameworkCore.Internal
@model Book
@{
    ViewData["Title"] = "Book";
    Layout = "_Layout";
}

        <div>
            @if (Model.Cover != null)
            {
                <img src="data:image/png;base64,@Model.Cover" height="400" width="300" class="img-fluid" />
            }
        </div>
        <div class="text-white">
            <div>@Model.Authorships.Select(a=>new string($"{a.Author.LastName} {a.Author.FirstName[0]}")).Join(", ") - @Model.Title</div>
            <div>@Model.Year - @Model.Isbn</div>
            <br />
            <div>@Model.Annotation</div>
            <div>
                <form asp-action="GetFile" asp-route-id="@Model.BookId">
                    <button class="btn btn-primary" type="submit">Download</button>
                </form>
            </div>
        </div>
